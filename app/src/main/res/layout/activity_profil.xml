<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">

    <include
            android:id="@+id/toolbarprofile"
            layout="@layout/toolbar_user"/>

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img"
            android:background="@drawable/button_oval1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="180dp"
            android:layout_width="150dp"
            android:layout_height="150dp"/>

    <RelativeLayout
            android:background="@drawable/button1"
            android:layout_centerInParent="true"
            android:layout_width="350dp"
            android:layout_height="wrap_content">
        <TextView
                android:text="Nama :"
                android:id="@+id/txt_nama"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:text="Nama"
                android:id="@+id/nama"
                android:textColor="@color/colorPrimaryDark"
                android:layout_below="@+id/txt_nama"
                android:layout_marginStart="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:text="NPM :"
                android:id="@+id/txt_npm"
                android:layout_below="@+id/nama"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:text="NPM"
                android:id="@+id/npm"
                android:textColor="@color/colorPrimaryDark"
                android:layout_below="@+id/txt_npm"
                android:layout_marginStart="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:text="Tanggal Lahir :"
                android:id="@+id/txt_tgl"
                android:layout_below="@+id/npm"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:text="Tanggal lahir"
                android:id="@+id/tgl"
                android:textColor="@color/colorPrimaryDark"
                android:layout_below="@+id/txt_tgl"
                android:layout_marginStart="30dp"
                android:layout_marginBottom="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </RelativeLayout>

</RelativeLayout>