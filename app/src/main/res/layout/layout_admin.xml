<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.Admin.AdminActivity">

        <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/toolbaradmin"
                android:background="@color/colorPrimary"
                app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/icon_kampus"
                        android:id="@+id/logoadmingundar"
                        />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="Dashboard Admin"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/logoadmingundar"
                        android:fontFamily="serif"
                        android:textColor="#000"
                        android:textSize="18sp"/>

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/btnlogoutadmin"
                        android:src="@drawable/ic_exit_to_app_black_24dp"
                        android:layout_marginRight="10dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"/>
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/toolbaradmin"
        android:id="@+id/centeradmin"/>

        <LinearLayout
                android:layout_toLeftOf="@+id/centeradmin"
                android:layout_below="@+id/toolbaradmin"
                android:layout_marginTop="30dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/button_oval"
                android:orientation="vertical"
                android:id="@+id/btn_teknik"
                android:padding="5dp"
                android:layout_width="130dp"
                android:layout_height="130dp">
            <ImageView
                    android:src="@drawable/komputer1"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="70dp"
                    android:layout_height="70dp"/>
            <TextView
                    android:text="Teknik Informatika"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
                android:id="@+id/btn_sistem"
                android:layout_toRightOf="@+id/centeradmin"
                android:layout_below="@+id/toolbaradmin"
                android:layout_marginTop="30dp"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/button_oval"
                android:orientation="vertical"
                android:padding="5dp">

            <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/komputer2" />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:text="Sistem Informasi"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold" />
        </LinearLayout>
</RelativeLayout>
